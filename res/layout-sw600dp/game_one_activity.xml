<?xml version="1.0" encoding="utf-8"?>

<com.frba.abclandia.dragdrop.DragLayer xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/drag_layer"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF" >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="25dp"
        android:orientation="horizontal" >

        <GridView
            android:id="@+id/gridViewLeft"
            android:layout_width="450dp"
             android:background="#00FFFF"
            android:layout_height="wrap_content"
            android:layout_marginRight="40dp"
            android:numColumns="3"
            android:verticalSpacing="20dp" >
        </GridView>

        <GridView
            android:id="@+id/gridViewRight"
            android:background="#FF00FE"
            android:layout_width="450dp"
            android:layout_height="wrap_content"
            android:numColumns="3"
            android:verticalSpacing="20dp" >
        </GridView>
    </LinearLayout>

</com.frba.abclandia.dragdrop.DragLayer>