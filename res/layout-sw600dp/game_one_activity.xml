<?xml version="1.0" encoding="utf-8"?>

<com.frba.abclandia.dragdrop.DragLayer xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/drag_layer"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
       android:gravity="center"
    	android:orientation="horizontal" >

        <GridView
            android:id="@+id/gridViewLeft"
            android:layout_width="470dp"
            android:layout_height="536dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/grid_game_one_7_shape"
            android:gravity="center_horizontal"
            android:numColumns="3"
            android:verticalSpacing="0dp" >
        </GridView>

        <GridView
            android:id="@+id/gridViewRight"
            android:layout_width="470dp"
            android:layout_height="536dp"
            android:layout_marginLeft="10dp"
 			android:background="@drawable/grid_game_one_7_shape"
            android:gravity="center_horizontal"
            android:numColumns="3"
            android:verticalSpacing="0dp" >
        </GridView>
    </LinearLayout>

</com.frba.abclandia.dragdrop.DragLayer>
