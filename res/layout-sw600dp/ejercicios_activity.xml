<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layoutJuegoActivity"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:background="#CCD0D9" >

    <LinearLayout
        style="@style/TopBarSeven"
        android:background="#AAB2BD"
        android:orientation="horizontal" >
        
           <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:src="@drawable/ic_abclandia_7"
            android:background="#0000"></ImageButton>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:text="@string/title_activity_ejercicios"
            style="@style/TitleTopBarSeven" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:gravity="center" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical" 
            android:layout_marginRight="16dp">

            <Button
                android:id="@+id/btnEjercicio1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/btnEjercicio1"
                android:textSize="20sp"
                android:background="@drawable/btn_juegos_7_shape"
                android:layout_marginBottom="16dp" />

            <Button
                android:id="@+id/btnEjercicio2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/btnEjercicio2"
                android:textSize="20sp"
                 android:textColor="#FFFFFF"
                android:background="@drawable/btn_juegos_7_shape"
                android:layout_marginBottom="16dp" />

            <Button
                android:id="@+id/btnEjercicio3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/btnEjercicio3"
                android:textSize="20sp"
                android:background="@drawable/btn_juegos_7_shape"
                android:layout_marginBottom="16dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginLeft="16dp" >

            <Button
                android:id="@+id/btnEjercicio4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/btnEjercicio4"
                android:textSize="20sp"
                android:background="@drawable/btn_juegos_7_shape"
                android:layout_marginBottom="16dp" />

            <Button
                android:id="@+id/btnEjercicio5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/btnEjercicio5"
                android:textSize="20sp"
                android:background="@drawable/btn_juegos_7_shape" 
                android:layout_marginBottom="16dp"/>

            <Button
                android:id="@+id/btnEjercicio6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/btnEjercicio6"
                android:textSize="20sp"
                android:background="@drawable/btn_juegos_7_shape"
                android:layout_marginBottom="16dp" />
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>