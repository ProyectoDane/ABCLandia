<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_vertical" >
    <ImageView 
        android:id="@+id/imgViewAlumno"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:contentDescription="@string/imgAlumno"
        android:src="@drawable/ic_alumno"/>
   
        <TextView 
        android:id="@+id/lblAlumnoNombre"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_toRightOf="@id/imgViewAlumno"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="12dp"
        android:text="@string/nombreRow"
        android:textSize="30sp"
        android:textColor="#FFFFFF"/>
    <TextView 
        android:id="@+id/lblAlumnoApellido"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_toRightOf="@id/lblAlumnoNombre"
        android:layout_alignTop="@id/lblAlumnoNombre"
        android:layout_marginLeft="6dp"
        android:text="@string/apellidoRow"
        android:textSize="30sp"
        android:textColor="#FFFFFF"/>
        

    
</RelativeLayout>
