<?xml version="1.0" encoding="utf-8"?>
<com.frba.abclandia.dragdrop.DragLayer xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/drag_layer"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFF00" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="horizontal" >

        <GridView
            android:id="@+id/gridViewLeft"
            android:layout_width="285dp"
            android:layout_height="510dp"
            android:layout_marginRight="30dp"
            android:background="@drawable/grid_game_one_7_shape"
            android:gravity="center"
            android:numColumns="1"
            android:verticalSpacing="15dp"
            android:tag="left" >
        </GridView>
        <GridView
            android:id="@+id/gridViewCenter"
            android:layout_width="285dp"
            android:layout_height="510dp"
            android:layout_marginRight="30dp"
            android:background="@drawable/grid_game_one_7_shape"
            android:gravity="center"
            android:numColumns="1"
            android:verticalSpacing="15dp"
            android:tag="center" >
        </GridView>

        <GridView
            android:id="@+id/gridViewRight"
            android:layout_width="285dp"
            android:layout_height="510dp"
            android:background="@drawable/grid_game_one_7_shape"
            android:gravity="center"
            android:numColumns="1"
            android:verticalSpacing="15dp"
            android:tag="right" >
        </GridView>
    </LinearLayout>

</com.frba.abclandia.dragdrop.DragLayer>