<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#656D78"
     tools:context=".LoginActivity" >
     
     <LinearLayout
        style="@style/TopBar"
        android:background="#454954"
        android:orientation="horizontal" >

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:src="@drawable/ic_abclandia"
            android:background="#0000"></ImageButton>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
           	android:text="@string/title_activity_login"
            style="@style/TitleTopBar" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:orientation="vertical" >

        <Button
            android:id="@+id/login_maestro"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="36dp"
            android:background="@drawable/btn_inicio_10_shape"
            android:onClick="loginMaestro"
            android:text="@string/login_maestro"
            android:textSize="40sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/bntlogin_padre"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="36dp"
            android:onClick="loginPadre"
            android:background="@drawable/btn_inicio_10_shape"
            android:textSize="40sp"
            android:text="@string/login_padre"
            android:textStyle="bold" />
    </LinearLayout>

</RelativeLayout>