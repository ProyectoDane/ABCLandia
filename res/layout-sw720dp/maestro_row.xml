<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:gravity="center_vertical"
    android:background="@drawable/shape_alumno_row" >
    <ImageView 
        android:id="@+id/imgViewMaestro"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"

        android:contentDescription="@string/imgMaestro"
        android:src="@drawable/ic_maestro_10" />
   
   
	    <TextView 
	        android:id="@+id/lblMaestroNombre"
	        android:layout_height="wrap_content"
	        android:layout_width="wrap_content"
	        android:layout_toRightOf="@id/imgViewMaestro"
	        android:layout_marginLeft="4dp"
	        android:layout_centerVertical="true"
	        android:text="@string/nombreRow"
	        android:textColor="#4C4C4C"
	      	android:textSize="25sp" />
	    <TextView 
	        android:id="@+id/lblMaestroApellido"
	        android:layout_height="wrap_content"
	        android:layout_width="wrap_content"
	   		android:layout_toRightOf="@id/lblMaestroNombre"
	        android:layout_marginLeft="4dp"
	        android:layout_alignTop="@id/lblMaestroNombre"
	        android:gravity="center_vertical"
	        android:text="@string/apellidoRow"
	        android:textColor="#4C4C4C"
	      	android:textSize="25sp"/>
 
</RelativeLayout>
