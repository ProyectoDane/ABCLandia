<?xml version="1.0" encoding="utf-8"?>
<com.frba.abclandia.dragdrop.DragLayer xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/drag_layer"
    android:layout_width="match_parent"
    android:layout_height="match_parent" 
    android:background="#C1BCED">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:gravity="center_horizontal"
      
        android:orientation="horizontal" >

        <GridView
            android:id="@+id/gridViewLeft"
            android:layout_width="400dp"
            android:layout_height="700dp"
            android:layout_marginRight="55dp"
            android:numColumns="1"
            android:background="@drawable/grid_game_four_10_shape"
            android:gravity="center_horizontal"
           	android:verticalSpacing="15dp">
        </GridView>

        <GridView
            android:id="@+id/gridViewRight"
            android:layout_width="400dp"
            android:layout_height="700dp"
            android:numColumns="1"
            android:background="@drawable/grid_game_four_10_shape"
            android:gravity="center_horizontal"
         	android:verticalSpacing="15dp"
            android:layout_marginLeft="55dp" >
        </GridView>
    </LinearLayout>

</com.frba.abclandia.dragdrop.DragLayer>