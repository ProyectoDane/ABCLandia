<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#4FC0E8"
    android:orientation="vertical"
    tools:context="com.frba.abclandia.AlumnosActivity" >

    <LinearLayout
        style="@style/TopBar"
        android:background="#3BAEDA"
        android:orientation="horizontal"
        android:gravity="center_vertical" >
        
          <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:src="@drawable/ic_abclandia"
            android:background="#0000"></ImageButton>

       <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:text="@string/title_activity_alumnos" 
            style="@style/TitleTopBar"/>
    </LinearLayout>

     <GridView
        android:id="@+id/gridViewAlumnos"
        android:layout_width="710dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="90dp"
       	android:columnWidth="350dp"
        android:numColumns="2"
        android:verticalSpacing="6dp"
        android:horizontalSpacing="10dp"
        android:stretchMode="none"
         >
    </GridView>

</RelativeLayout>