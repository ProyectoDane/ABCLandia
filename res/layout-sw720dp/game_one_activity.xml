<?xml version="1.0" encoding="utf-8"?>
<com.frba.abclandia.dragdrop.DragLayer xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/drag_layer"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="25dp"
        android:gravity="center_horizontal"
    	android:orientation="horizontal" >

        <GridView
            android:id="@+id/gridViewLeft"
            android:layout_width="600dp"
            android:layout_height="700dp"
            android:layout_marginRight="15dp"
            android:background="@drawable/gridview_shape"
            android:gravity="center_horizontal"
            android:numColumns="3"
            android:verticalSpacing="4dp" >
        </GridView>

        <GridView
            android:id="@+id/gridViewRight"
            android:layout_width="600dp"
            android:layout_height="700dp"
            android:layout_marginLeft="15dp"
 			android:background="@drawable/gridview_shape"
            android:gravity="center"
            android:numColumns="3"
            android:verticalSpacing="4dp" >
        </GridView>
    </LinearLayout>

</com.frba.abclandia.dragdrop.DragLayer>