<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_single"
    android:orientation="horizontal" >

    <ScrollView
        android:id="@+id/scrollView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_marginBottom="74dp"
        android:layout_marginLeft="65dp" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <Button
                android:id="@+id/btnReproducirABC"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/reproducirAbecedario"
                android:onClick="btnReproducirAbecedario" />

            <Button
                android:id="@+id/btnReproducirLetra"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/reproducirLetra"
                android:onClick="btnReproducirLetra" />

            <Button
                android:id="@+id/btnJugar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/jugar" 
                android:onClick="btnJugar"/>

        </LinearLayout>
    </ScrollView>

</RelativeLayout>