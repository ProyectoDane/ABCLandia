<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#656D78" >
    
		<LinearLayout 
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:orientation="vertical"
		    android:layout_centerVertical="true"
		    android:layout_centerHorizontal="true">

        <Button
            android:id="@+id/btnNivel1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/btn_niveles_shape"
            android:layout_margin="10dp"
             android:textSize="30sp"
           	android:text="@string/btnNivel1"
           	 />

        <Button
            android:id="@+id/btnNivel2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/btn_niveles_shape"
            android:layout_margin="10dp"
            android:textSize="30sp"
   			android:text="@string/btnNivel2" />

        <Button
            android:id="@+id/btnNivel3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
           android:background="@drawable/btn_niveles_shape"
           android:layout_margin="10dp"
            android:textSize="30sp"
       		android:text="@string/btnNivel3" />
        
        </LinearLayout>
 
    

</RelativeLayout>
